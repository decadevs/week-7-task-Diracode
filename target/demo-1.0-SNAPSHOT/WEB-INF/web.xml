<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <context-param>
        <param-name>jdbcURL</param-name>
        <param-value>jdbc:mysql://localhost:3306/facebook?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC
        </param-value>
    </context-param>

    <context-param>
        <param-name>jdbcUsername</param-name>
        <param-value>root</param-value>
    </context-param>

    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>Odiraeze1990</param-value>
    </context-param>

    <servlet>
        <servlet-name>UserControllerServlet</servlet-name>
        <servlet-class>com.diracode.facebook.controllers.UserControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserControllerServlet</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignInControllerServlet</servlet-name>
        <servlet-class>com.diracode.facebook.controllers.SignInControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignInControllerServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PostControllerServlet</servlet-name>
        <servlet-class>com.diracode.facebook.controllers.PostControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PostControllerServlet</servlet-name>
        <url-pattern>/createPost</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/Error.jsp</location>
    </error-page>
</web-app>